<ul class="navbar-nav">
	@if(User.Identity.IsAuthenticated) 
	{
		<li class="nav-item">
			<a class="nav-link" href="#" title="Manage">@User.Identity.Name</a>
		</li>

		<li class="nav-item">
			<form class="form-inline" method="post" asp-controller="Users" asp-action="Logout" 
				asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
				<button class="nav-link btn btn-link" type="Submit">Logout</button>
			</form>
 		</li>
	}
	else 
	{
		<li class="nav-item">
			<a class="nav-link" asp-controller="Users" asp-action="Login" 
				asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">Login</a>
		</li>


		<li class="nav-item">
			<a class="nav-link" asp-controller="Users" asp-action="Register"
				asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">Register</a>
		</li>
	}
</ul>

